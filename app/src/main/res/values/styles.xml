<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <!--<item name="windowActionBar">false</item>-->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/green</item>
        <!--<item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>-->

        <!--<item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>-->

        <item name="android:itemTextAppearance">@style/TextAppearance1</item>
        <!--<item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionOverflowButtonStyle">@color/white</item>
        <item name="android:actionOverflowButtonStyle">@color/white</item>
        <item name="actionOverflowMenuStyle">@color/white</item>
        <item name="android:actionOverflowMenuStyle">@color/white</item>-->


        <item name="actionBarTheme">@style/MyApp.ActionBarTheme</item>
        <!-- color for widget theming, eg EditText. Doesn't effect ActionBar. -->
        <item name="colorControlNormal">@color/white</item>


    </style>

    <style name="MyApp.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow! -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="header">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.9</item>
        <item name="android:background">@color/green</item>
        <item name="android:fontFamily">@font/gothic_bold</item>
        <item name="fontFamily">@font/gothic_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--<item name="android:background">@drawable/button_border</item>-->



    <style name="month">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.9</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/gothic</item>
        <item name="fontFamily">@font/gothic</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--<item name="android:background">@drawable/input_border</item>-->


    <style name="zone" parent="month">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="edittex">
        <item name="android:background">@drawable/input_border</item>
        <item name="android:fontFamily">@font/gothic</item>
        <item name="android:gravity">center</item>
        <item name="android:text">test test test</item>
    </style>








    <style name="TextAppearance1">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="MyToolbar" parent="ThemeOverlay.AppCompat.Dark">
        //toolbar back arrow color
        <item name="android:textColorSecondary">@android:color/white</item>
        //toolbar title color
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/blue</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@color/green</item> <!-- activated color change as you wish -->
        <item name="android:textColor">#FFFF3F3C</item> <!-- checkbox text color -->
    </style>

</resources>
